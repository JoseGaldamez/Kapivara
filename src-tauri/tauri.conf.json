{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kapivara",
  "version": "0.1.3",
  "identifier": "dev.josegaldamez.kapivara",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Kapivara",
        "label": "main",
        "minWidth": 960,
        "minHeight": 640,
        "width": 1280,
        "height": 720,
        "visible": false,
        "center": true
      },
      {
        "width": 400,
        "height": 260,
        "decorations": false,
        "url": "/splashscreen.html",
        "label": "splashscreen",
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}